{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json",
    "createDefaultProgram": true // https://github.com/typescript-eslint/typescript-eslint/issues/967
  },
  "plugins": ["import", "react", "react-hooks", "@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "react-hooks/rules-of-hooks": "error", // 检查 Hook 的规则
    "react-hooks/exhaustive-deps": "warn", // 检查 effect 的依赖
    "semi": "error",
    "@typescript-eslint/ban-types": [
      "off",
      {
        "extendDefaults": true,
        "types": {
          "{}": false
        }
      }
    ],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "@typescript-eslint/no-use-before-define": "error",
    "no-empty-function": "error",
    "quotes": ["error", "double"],
    "no-dupe-else-if": "error",
    "no-tabs": "off",
    "no-undef": "error",
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "eol-last": "error",
    "padded-blocks": "off",
    "eqeqeq": "warn",
    "space-before-blocks": "error",
    "generator-star-spacing": ["error", "after"],
    "require-yield": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-empty-interface": ["error", { "allowSingleExtends": true }],
    "@typescript-eslint/ban-ts-comment": [
      "error",
      {
        "ts-expect-error": "allow-with-description",
        "ts-ignore": false,
        "ts-nocheck": true,
        "ts-check": false,
        "minimumDescriptionLength": 4
      }
    ],
    "react/display-name": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "import/no-unresolved": "error",
    "max-len": ["error", 130],
    "no-console": "off",
    "spaced-comment": "error",
    "arrow-body-style": ["error", "as-needed"],
    "array-callback-return": ["error", { "allowImplicit": true, "checkForEach": true }],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true,
        "enforceForJSX": true
      }
    ],
    "class-methods-use-this": "off",
    "react/destructuring-assignment": "warn",
    "react/no-did-update-set-state": "off",
    "react/no-direct-mutation-state": "error",
    "react/jsx-wrap-multilines": "error",
    "react/default-props-match-prop-types": "error",
    "react/sort-comp": "off",
    "no-param-reassign": "error",
    "consistent-return": "off",
    "react/jsx-filename-extension": [1, { "allow": "as-needed", "extensions": [".jsx", ".tsx"] }],
    "react/prop-types": 0,
    "react/jsx-no-bind": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "react/jsx-equals-spacing": 0,
    "react/jsx-curly-spacing": [
      2,
      "never",
      {
        "allowMultiline": true,
        "spacing": { "objectLiterals": "never" }
      }
    ],
    "react/jsx-tag-spacing": 2,
    "react/jsx-max-props-per-line": [2, { "maximum": 5, "when": "always" }],
    "react/jsx-one-expression-per-line": [0],
    "react/jsx-props-no-multi-spaces": 2,
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "comma-spacing": 2,
    "array-bracket-spacing": [2, "never"],
    "no-trailing-spaces": "error",
    "object-curly-spacing": ["error", "always"],
    "keyword-spacing": ["error", { "before": true }],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "key-spacing": ["error", { "beforeColon": false }],
    "arrow-parens": ["error", "as-needed"],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "func-call-spacing": ["error", "never"],
    "block-spacing": "error",
    "computed-property-spacing": ["error", "never"],
    "semi-spacing": "error",
    "switch-colon-spacing": "error",
    "template-tag-spacing": ["error", "never"],
    "rest-spread-spacing": ["error", "never"],
    "template-curly-spacing": "error",
    "@typescript-eslint/key-spacing": "error",
    "@typescript-eslint/member-delimiter-style": "error",
    "@typescript-eslint/space-before-blocks": "error",
    "@typescript-eslint/type-annotation-spacing": "error",
    "@typescript-eslint/space-infix-ops": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx",  ".js", ".jsx"]
    },
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".tsx", ".js", ".jsx", ".json", "."]
      },
      // use <root>/path/to/folder/tsconfig.json
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  }
}
